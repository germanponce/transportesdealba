<odoo>
  <data>
    <!--::::::::::::::::::::::::::::::::::::::::::::-->
    <!-- VIEWS {LIST, FORM} -->
    <!--::::::::::::::::::::::::::::::::::::::::::::-->

    <!-- CIRCUITS - LIST VIEW -->
    <record id="view_logistics_circuits_list" model="ir.ui.view">
      <field name="name">Circuitos</field>
      <field name="model">wobin.logistics.circuits</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="unit_id"/>
          <field name="operator_id"/> 
          <field name="start_date"/>
          <field name="end_date"/> 
          <field name="state_circuit"/>                                  
        </tree>
      </field>
    </record>    

    <!-- CIRCUITS - FORM VIEW -->
    <record id="view_logistics_circuits_form" model="ir.ui.view">
      <field name="name">Circuitos</field>
      <field name="model">wobin.logistics.circuits</field>
      <field name="arch" type="xml">
        <form duplicate="0">
          <!--Botones y barra de estado--> 
          <header>
            <button name="create_trip" 
                    type="object" 
                    string="Crear Viaje" 
                    class="oe_highlight" 
                    attrs="{'invisible': ['|', ('name', '=', 'New'), ('state_circuit', '=', 'cerrado')]}"/>                
            <field name="state_circuit" widget="statusbar" statusbar_visible="activo,cerrado"/>
          </header>       
          <!--Campos--> 
          <sheet>
            <div class="oe_button_box" name="button_box">  
              <button class="oe_stat_button" type="object" name="get_trips" icon="fa-truck">
                  <field string="Viajes" name="trips_count" widget="statinfo"/>
              </button>    
            </div>        
            <div class="oe_left oe_title">
              <h1>
                <!--<field name="name" readonly="True"/>-->
                <field name="name"/>
              </h1>
            </div>             
            <group>
              <group>
                <field name="unit_id"/>
                <field name="operator_id"/>                          
              </group>
              <group>
                <field name="start_date"/>
                <field name="end_date"/>
              </group>
            </group>
          </sheet>
          <!--Actividades, Seguimiento, Hilos--> 
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="activity_ids" widget="mail_activity"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>             
        </form>
      </field>
    </record>    

  </data>  
</odoo>