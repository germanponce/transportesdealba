                                            <separator string="Guias de IdentificaciÃ³n" />
                                            <field name="guia_ids" nolabel="1">
                                                <tree string="Guias de IdentificaciÃ³n"  editable="bottom">
                                                    <field name="numero_guia" required="1"/>
