  box-shadow: 0 5px #999;" type="action"/>
                                    <field name="invoice_line_complement_cp_ids" nolabel="1" attrs="{'readonly': [('l10n_mx_edi_cfdi_uuid','!=',False)]}"  context="{'default_international_shipping': international_shipping}">
